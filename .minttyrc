CursorColour=217,230,242
Black=0,0,0
BoldBlack=38,38,38
Red=213,113,93
BoldRed=234,184,174
Green=93,213,113
BoldGreen=174,234,184
Yellow=193,213,93
BoldYellow=224,234,174
Blue=113,93,213
BoldBlue=184,174,234
Magenta=213,93,193
BoldMagenta=234,174,224
