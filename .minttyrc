#
# Copy this file to %LOCALAPPDATA%\wsltty\home\%USERNAME%\.minttyrc
#
Locale=ja_JP
Charset=UTF-8
CopyOnSelect=no
CtrlShiftShortcuts=yes
RightClickAction=menu
CursorType=block
Printer=Adobe PDF
BoldAsFont=yes
FontSmoothing=full
Font=Consolas
FontHeight=9

Transparency=15
Columns=115
Rows=70

